= display_page_title('Sign in')
.container
  .col-md-5
    = bootstrap_form_for(resource, as: resource_name, url: user_session_path) do |f|
      = f.email_field :email, autofocus: true
      = f.password_field :password, autocomplete: 'off'
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
      = f.submit 'Sign In', class: 'btn-u'
