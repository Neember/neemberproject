= display_page_title('Projects List')

%div.container.content
  %table.table
    %tr
      %th Name
      %th Domain
      %th Date Started
      %th Number of Sprints
      %th Price perSprint
      %th Quotation
      %th Action
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.domain
        %td= project.date_started
        %td= project.no_of_sprints
        %td= project.price_per_sprint
        %td= project.quotation_no
        %td
          = link_to 'Edit', edit_project_path(project.id), class: 'btn btn-link', data: { test: "project-#{project.id}" }

  %div
    = will_paginate(@projects, {renderer: BootstrapPagination::Rails, next_label: '&raquo;', previous_label: '&laquo;'} )
